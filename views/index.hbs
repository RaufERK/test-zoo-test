<script defer src='/js/scroll.js'></script>

<section class="hero">
  <div class="container">
    <div class="maintext">Добро пожаловать в наш зоопарк!</div>
    <button class="btn hero-btn">Смотреть животных</button>
  </div>
</section>

<div class="container">
  <a name='animals'></a><h2 class="main-subtitle">Познакомьтесь с нашими подопечными</h2>
  <!-- Animal Types -->
  <div class="animal-types">
    {{#each categories}}
    <div class="animal-type">
      <a href="/category/{{this.englishName}}"><img src="{{this.picture}}" alt="" class="animal-type__img" /></a>
      <div class="animal-type__title">
        <a href="/category/{{this.englishName}}">{{this.title}}</a>
      </div>
    </div>
    {{/each}}          
  </div>
  <!-- End Animal Types -->
</div>
