<script defer src="/js/admin.js"></script>

{{> adminHeader}}

<div class="container maincontent">
{{> adminNavigation}}

    <h2 class="ui header">Обновите данные</h2>
    <p><a href='/admin/categories/'>&larr; Вернуться</a></p>
    <form action="/admin/editCategory" method="POST" class="ui form" enctype="multipart/form-data">
      <input type='hidden' name='categoryId' value='{{category._id}}' />
      <div class="field">
        <label>Название категории</label>
        <input type="text" name="title" value='{{category.title}}'>
      </div>

      <div class="field">
        <label>Название по-английски (для урла)</label>
        <input type="text" name="englishName" value='{{category.englishName}}'>
      </div>

      <div class="field">
        <label>Фото категории</label>
        <input type="file" name="filedata" />
        {{#if category.picture}}
        <div class='image-preview'>
          <img src="{{category.picture}}" alt=""  width='150' id='preview-pic'>
          <button class='preview-close-btn' data-action='delete-preview-pic'>X</button>  
        </div>
        <input type='hidden' name='picUrl' value='{{category.picture}}' id='picUrl'>
        {{/if}}
      </div>
      
      <div class="field">
        <label>Координаты для карты (через запятую)</label>
        <input type="text" name="coordinates" value='{{category.coordinates}}'>
      </div>

      <div class="field">
        <label>Ссылка на иконку</label>
        <input type="text" name="icon" value='{{category.icon}}'>
      </div>

      <div class="field">
        <label>Описание</label> 
        <textarea name="description" cols="30" rows="10">{{category.description}}</textarea>
      </div>
      <button class="ui button primary">Сохранить</button>
    </form>

</div>
