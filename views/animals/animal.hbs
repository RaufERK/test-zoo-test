<script defer src="/js/slider.js"></script>

<section class="hero-inner">
  <div class="container">
    <h1 class="inner-title">{{animal.name}}</h1>
  </div>
</section>

<div class='breadcrumbs container'>
  <a href="/animals">Все животные</a> /
  <a href="/category/{{resultCategory.englishName}}">{{resultCategory.title}}</a> /
  <span>{{animal.name}}</span>
</div>

<section class="innerpage container">
  <div class='category_description'>
    {{animal.description}}
  </div>

  <!-- SLIDER **************************************************************************************** -->
  <div class="blog-slider__container">
    {{#each animal.picture}}
    <div class="blogSlides fade">
      <img src="{{this}}" alt='' />
    </div>
    {{/each}}

    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>

  <div class="blogSlider__dots">
    {{#each animal.pictureIndex}}
      <span class="blogSlider__dots--dot" onclick="currentSlide({{this}})"></span>
    {{/each}}
    
  </div>
  <!-- END SLIDER ************************************************************************************ -->
</section>